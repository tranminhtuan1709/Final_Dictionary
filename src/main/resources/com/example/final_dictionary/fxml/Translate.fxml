<AnchorPane prefHeight="650.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.final_dictionary.TranslateController">
   <children>
      <Rectangle arcWidth="5.0" fill="#0b4a97" height="50.0" stroke="TRANSPARENT" strokeType="INSIDE" strokeWidth="0.0" width="1200.0" />
      <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="30.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/translateIcon.png" />
         </image>
      </ImageView>
      <Label layoutX="76.0" layoutY="-3.0" prefHeight="55.0" prefWidth="260.0" text="Online Translator" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="30.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="100.0" text="Get a quick, free translation!" textFill="#02096b">
         <font>
            <Font name="Segoe UI Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="135.0" text="Type your text and click Translate to see the translation" textFill="#14056b">
         <font>
            <Font name="Segoe UI Semibold" size="18.0" />
         </font>
      </Label>
      <TextField alignment="TOP_LEFT" layoutX="50.0" layoutY="236.0" prefHeight="283.0" prefWidth="497.0" promptText="Enter your text here" styleClass="translate-field" stylesheets="@Style.css">
         <font>
            <Font name="Segoe UI Semilight" size="18.0" />
         </font>
      </TextField>
      <WebView layoutX="644.0" layoutY="236.0" prefHeight="284.0" prefWidth="497.0" />
      <MenuButton layoutX="50.0" layoutY="198.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="105.0" styleClass="selectLanguageButton" stylesheets="@Style.css" text="Select" textFill="#fffcfc">
        <items>
          <MenuItem mnemonicParsing="false" text="English" />
          <MenuItem mnemonicParsing="false" text="Vietnamese" />
        </items>
      </MenuButton>
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</AnchorPane>
